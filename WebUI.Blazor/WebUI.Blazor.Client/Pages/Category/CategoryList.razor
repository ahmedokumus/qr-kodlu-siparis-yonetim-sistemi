@page "/categorylist"

@inherits CategoryListProcess

<div class="row">
    <div class="col-6 align-self-center">
        <p class="fs-4">Kategori Listesi</p>
    </div>
    <div class="col-6">
        <div class="d-flex justify-content-end">

            <button type="submit" class="btn btn-primary d-flex justify-content-between" data-bs-toggle="modal"
                    data-bs-target="#CreateCategory">
                <i class="bi bi-plus"></i> Ekle
            </button>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table m-0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kategori Adı</th>
                <th>Durum</th>
                <th class="text-right">Oluşturma</th>
                <th class="text-right">Güncelleme</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data!)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        @if (item.Status)
                        {
                            <span class="badge shade-green">Açık</span>
                        }
                        else
                        {
                            <span class="badge shade-red">Kapalı</span>
                        }
                    </td>
                    <td class="text-right">@item.CreatedDate</td>
                    <td class="text-right">
                        @(item.UpdatedDate != null ? item.UpdatedDate : "Güncellenmedi")
                    </td>
                    <td>
                        <button type="button" class="btn btn-warning btn-rounded d-flex justify-content-evenly" data-bs-toggle="modal"
                                data-bs-target="#UpdateCategory" onclick="openUpdateModal('@item.Id')">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        @* <a href="@Url.Action("UpdateCategory","Category",item.Id)" class="btn btn-warning btn-sm btn-rounded d-flex justify-content-evenly"><i class="bi bi-pencil-square"></i></a> *@
                    </td>
                    <td>
                        <a href="#" class="btn btn-danger btn-sm btn-rounded d-flex justify-content-evenly"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

